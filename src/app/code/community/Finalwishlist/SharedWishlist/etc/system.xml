<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <finalwishlist translate="label" module="finalwishlist_sharedwishlist">
            <label>Final wishlist</label>
            <sort_order>100</sort_order>
        </finalwishlist>
    </tabs>
    <sections>
        <finalwishlist_sharedwishlist translate="label" module="finalwishlist_sharedwishlist">
            <label>Api settings</label>
            <tab>finalwishlist</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <credentials translate="label" module="finalwishlist_sharedwishlist">
                    <label>Credentials</label>
                    <comment>If you still haven't it register on Finalwishlist site, then back here and fill with API ID
                        and API KEY
                    </comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sandbox_flag translate="label">
                            <label>Sandbox Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </sandbox_flag>
                        <api_id translate="label comment">
                            <label>API Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_id>
                        <api_key translate="label comment">
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </api_key>
                    </fields>
                </credentials>
            </groups>
        </finalwishlist_sharedwishlist>
    </sections>
</config>